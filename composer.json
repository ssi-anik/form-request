{
    "name": "anik/form-request",
    "description": "Form request is a package for Lumen that lets developer validate form requests like Laravel does.",
    "keywords": [
        "lumen",
        "form-request",
        "validation"
    ],
    "type": "library",
    "require": {
        "php": "^7.2|^8.0",
        "illuminate/support": "^6.0|^7.0|^8.0|^9.0|^10.0"
    },
    "require-dev": {
        "anik/testbench-lumen": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Anik\\Form\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Anik\\Form\\Test\\": "tests"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Syed Sirajul Islam Anik",
            "email": "sirajul.islam.anik@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true
}
